<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="w-full  bg-zinc-900 p-10 text-white h-maxcontent">
      <div class="back mb-5 text-blue-500"><a href="/">back to home</a></div>
      <h1 class="text-3xl tracking-tighter mb-3">All Users</h1>
      <div class="users flex flex-wrap gap-3">
        <%users.forEach(function(user){%>

        <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
          <div class="w-full h-52 rounded-lg bg-zinc-700 center">
            <img
              class="w-full h-full object-cover"
              src="<%=user.image%>"
              alt=""
            />
          </div>
          <h3 class="text-xl mt-3 tracking-tighter"><%=user.name%></h3>
          <h5 class="text-zinc-500"><%=user.email%></h5>
          <div class="mt-3 flex gap-5">
            <a class="text-zinc-500" href="/edit/<%=user.id%>">Edit user</a>
            <a class="text-red-500" href="/delete/<%=user.id%>">Delete</a>
          </div>
        </div>

        <% })%>
      </div>
    </div>
  </body>
</html>
